/**
 * Implements hook_cron().
 */
function stanford_capx_cron() {

  // Run all importers.
  $importers = CAPxImporter::loadAllImporters();
  foreach ($importers as $key => $importer) {
    $entity_importer = $importer->getEntityImporter();
    $entity_importer->execute();
  }

}


